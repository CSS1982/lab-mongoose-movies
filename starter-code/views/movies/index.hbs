<h2>Movies</h2>
{{#each movies}}
<p>
<a href="/movies/{{_id}}">{{title}}</a>
<form action="movies/{{_id}}/delete" method="POST">
    <button type="submit">DELETE</button>
</form>
<form action="movies/{{_id}}/edit" method="GET">
    <button type="submit">EDIT</button>
</form>
</p>
{{/each}}
<p><a class="btn btn-primary" href="/movies/new" role="button">ADD new movie</a></p>
<p><a class="btn btn-primary" href="/" role="button">BACK to home</a></p>